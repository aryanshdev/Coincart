<%- include("ejs/header.ejs") -%>

<body>

    <%- include("ejs/navbar.ejs") -%>
    <main>

      <div class="hero-area section-bg2">
        <div class="container">
          <div class="row">
            <div class="col-xl-12">
              <div class="slider-area">
                <div
                  class="slider-height2 slider-bg4 d-flex align-items-center justify-content-center"
                >
                  <div class="hero-caption hero-caption2">
                    <h2>Contact</h2>
                    <nav aria-label="breadcrumb">
                      <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item">
                          <a href="/">Home</a>
                        </li>
                        <li class="breadcrumb-item"><a href="#">Contact</a></li>
                      </ol>
                    </nav>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <section class="contact-section">
        <div class="container">
          <div class="d-block d-sm-block mb-5 pb-4">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3670.5358699645058!2d76.84871217543369!3d23.07747147913534!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x397ce9ceaaaaaaab%3A0xa224b6b82b421f83!2sVIT%20Bhopal%20University!5e0!3m2!1sen!2sin!4v1693845294450!5m2!1sen!2sin" width="100%" height="350px" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
</div>
          <div class="row">
            <div class="col-12">
              <h2 class="contact-title">Get in Touch</h2>
            </div>
            <div class="col-lg-8">
              <form
              name="contact-Form"
                class="form-contact contact_form"
                action="javascript:submitForm()"
                method="post"
                id="contact-Form"
              >
                <div class="row">
                  <div class="col-12">
                    <div class="form-group">
                      <textarea required
                        class="form-control w-100"
                        name="Message"
                        id="message"
                        cols="30"
                        rows="5"
                        onfocus="this.placeholder = ''"
                        onblur="this.placeholder = 'Enter Message'"
                        placeholder=" Enter Message"
                      ></textarea>
                    </div>
                  </div>
                  <div class="col-sm-6">
                    <div class="form-group">
                      <input required
                        class="form-control valid"
                        name="Name"
                        id="name"
                        type="text"
                        onfocus="this.placeholder = ''"
                        onblur="this.placeholder = 'Enter your name'"
                        placeholder="Enter your name"
                      />
                    </div>
                  </div>
                  <div class="col-sm-6">
                    <div class="form-group">
                      <input required
                        class="form-control valid"
                        name="Email"
                        id="email"
                        type="email"
                        onfocus="this.placeholder = ''"
                        onblur="this.placeholder = 'Enter email address'"
                        placeholder="Email"
                      />
                    </div>
                  </div>
                  <div class="col-12">
                    <div class="form-group">
                      <input required
                        class="form-control"
                        name="Subject"
                        id="subject"
                        type="text"
                        onfocus="this.placeholder = ''"
                        onblur="this.placeholder = 'Enter Subject'"
                        placeholder="Enter Subject"
                      />
                    </div>
                  </div>
                </div>
                <div class="form-group mt-3">
                  <button
                    type="submit"
                    id="submitButton"
                    class="button button-contact-Form boxed-btn"
                    >
                    Send
                  </button>
                </div>
              </form>
            </div>
            <div class="col-lg-3 offset-lg-1">
              <div class="media contact-info">
                <span class="contact-info__icon"><i class="ti-home"></i></span>
                <div class="media-body">
                  <h3>VIT Bhopal University, Sehore.</h3>
                  <p>Madhya Pradesh, India 466114</p>
                </div>
              </div>
              <div class="media contact-info">
                <span class="contact-info__icon"
                  ><i class="ti-tablet"></i
                ></span>
                <div class="media-body">
                  <h3>+91 12345 67890</h3>
                  <p>Mon to Saturday 9am to 8pm</p>
                </div>
              </div>
              <div class="media contact-info">
                <span class="contact-info__icon"><i class="ti-email"></i></span>
                <div class="media-body">
                  <h3>
                    admin@coincart.web
                  </h3>
                  <p>Send us your query anytime!</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
    <script>
      function submitForm() {
        var button = document.getElementById("submitButton");
        button.disabled = true;
        button.textContent = "Sending";
          var form = document.forms["contact-Form"];
          fetch("https://script.google.com/macros/s/AKfycbypN-jSXJdr75qQdjqKmhRA0J79gEPAQBxWFT6Po9JQ75JS4CO8sMlUSNzI7hH1oK8v/exec", {
            method: "POST",
            body: new FormData(form),
          })
            .then((response) => {
              document.getElementById("contact-Form").innerHTML =
                "<h5 class='title' style='margin-bottom:10px;'>Your message was sent</h5>";
            })
            .catch((error) => {
              alert(
                "An Error Occured While Sending Your Contact Form. Try Again Later."
              );
              button.textContent = "Submit";
              button.disabled = false;
            });
        }
    </script>
    <style>
      #submitButton:disabled{
        background-color: rgb(255, 177, 99);
      }
    </style>
    <%- include("ejs/footer.ejs") -%>
  
  